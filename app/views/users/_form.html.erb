  <div class="control-group">
    <%= f.label :password %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :password_confirmation %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>
